---
import { Font } from "astro:assets";

import "@/styles/global.css";
import "@/styles/slider.css";

import config from "@data/config.json";

import MetaPixelHead from "@components/base/MetaPixelHead.astro";
import MetaPixelBody from "@components/base/MetaPixelBody.astro";
import GoogleTagManagerHead from "@components/base/GoogleTagManagerHead.astro";
import GoogleTagManagerBody from "@components/base/GoogleTagManagerBody.astro";
import OpenGraph from "@components/base/OpenGraph.astro";
import Header from "@components/sections/Header.astro";
import Footer from "@components/sections/Footer.astro";

import type { lang } from "@interfaces/lang";
interface Props {
  lang: lang;
  className?: string;
}

const { lang } = Astro.props;
const constants = config[lang];
---

<!doctype html>
<html lang={lang} class="h-full scroll-smooth" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="description" content={constants.DESCRIPTION} />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Mosketeros Group" />
    <meta name="robots" content="index, follow" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <script src="/src/scripts/scripts.ts" defer is:inline></script>
    <script src="/src/scripts/slider.ts" type="module" defer></script>
    <title>{constants.TITLE}</title>

    <GoogleTagManagerHead />
    <MetaPixelHead />
    <OpenGraph lang={lang} />

    <Font cssVariable="--font-title" preload />
    <Font cssVariable="--font-body" preload />
  </head>
  <body
    class="font-body clamp-[text,xs,lg] bg-background text-foreground-1 text-balance"
  >
    <GoogleTagManagerBody />
    <MetaPixelBody />

    <Header lang={lang} />

    <slot />

    <Footer lang={lang} />
  </body>
</html>
